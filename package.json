{
  "name": "firecrawl-simple-mcp",
  "version": "1.0.1",
  "description": "Model Context Protocol (MCP) server for Firecrawl Simple - provides web scraping and crawling capabilities to LLMs",
  "main": "dist/index.js",
  "bin": {
    "firecrawl-simple-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "build:clean": "npm run clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "docs": "echo \"Documentation generation not configured yet\"",
    "release": "npm run lint && npm run typecheck && npm run test && npm version",
    "prepublishOnly": "npm run build:clean",
    "publish": "npm run release && git push && git push --tags"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "firecrawl",
    "web-scraping",
    "crawling",
    "llm",
    "ai",
    "claude",
    "cursor",
    "sitemap",
    "web-crawler",
    "headless-browser"
  ],
  "author": "Dmitry Safonov",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dsafonov/firecrawl-simple-mcp.git"
  },
  "homepage": "https://github.com/dsafonov/firecrawl-simple-mcp#readme",
  "bugs": {
    "url": "https://github.com/dsafonov/firecrawl-simple-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "fastmcp": "^1.20.5",
    "firecrawl-simple-client": "^1.0.2",
    "pino": "^9.6.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/node": "^22.14.0",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.0",
    "vitest": "^3.1.1"
  }
}
